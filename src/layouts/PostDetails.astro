---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Tag from "@components/Tag.astro";
import Datetime from "@components/Datetime";
import type { CollectionEntry } from "astro:content";
import { slugifyStr } from "@utils/slugify";
import ShareLinks from "@components/ShareLinks.astro";
import { SITE } from "@config";
import Comments from "@components/Comments";
import TableOfContents from "@components/TableOfContents.astro";

export interface Props {
  post: CollectionEntry<"blog">;
  posts: CollectionEntry<"blog">[];
}

const { post, posts } = Astro.props;

const {
  title,
  author,
  description,
  ogImage,
  canonicalURL,
  pubDatetime,
  modDatetime,
  tags,
  editPost,
} = post.data;

const { Content, headings } = await post.render();

const ogImageUrl = typeof ogImage === "string" ? ogImage : ogImage?.src;
const ogUrl = new URL(
  ogImageUrl ?? `/posts/${slugifyStr(title)}.png`,
  Astro.url.origin
).href;

const layoutProps = {
  title: `${title} | ${SITE.title}`,
  author,
  description,
  pubDatetime,
  modDatetime,
  canonicalURL,
  ogImage: ogUrl,
  scrollSmooth: true,
};

/* ========== Prev/Next Posts ========== */

const allPosts = posts.map(({ data: { title }, slug }) => ({
  slug,
  title,
}));

const currentPostIndex = allPosts.findIndex(a => a.slug === post.slug);

const prevPost = currentPostIndex !== 0 ? allPosts[currentPostIndex - 1] : null;
const nextPost =
  currentPostIndex !== allPosts.length ? allPosts[currentPostIndex + 1] : null;
---

<Layout {...layoutProps}>
  <Header />

  <main
    id="main-content"
    class="mx-auto flex w-full max-w-6xl flex-col gap-8 px-4 pb-12 sm:flex-row sm:items-start sm:gap-10"
  >
    <div class="toc-spacer hidden w-[16rem] shrink-0 sm:block">
      <aside
        class="toc-wrapper fixed top-[15%] w-[16rem]"
      >
        <TableOfContents headings={headings} />
      </aside>
    </div>

    <div class="min-w-0 flex-1">
      <div class="mx-auto w-full max-w-3xl">
        <div class="mb-2 mt-8 flex justify-start">
          <button
            class="focus-outline flex hover:opacity-75"
            onclick="(() => (history.length === 1) ? window.location = '/' : history.back())()"
          >
            <svg xmlns="http://www.w3.org/2000/svg"
              ><path
                d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"
              ></path>
            </svg><span>Go back</span>
          </button>
        </div>

        <h1
          transition:name={slugifyStr(title)}
          class="post-title reveal-on-scroll"
          data-reveal-target
        >
          {title}
        </h1>
        <Datetime
          pubDatetime={pubDatetime}
          modDatetime={modDatetime}
          size="lg"
          className="my-2"
          editPost={editPost}
          postId={post.id}
        />
        <article id="article" class="prose mx-auto mt-8 max-w-3xl">
          <Content />
        </article>

        <ul class="my-8">
          {tags.map(tag => <Tag tag={slugifyStr(tag)} />)}
        </ul>

        <div
          class="flex flex-col-reverse items-center justify-between gap-6 sm:flex-row-reverse sm:items-end sm:gap-4"
        >
          <button
            id="back-to-top"
            class="focus-outline whitespace-nowrap py-1 hover:opacity-75"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="rotate-90">
              <path
                d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"
              ></path>
            </svg>
            <span>Back to Top</span>
          </button>

          <ShareLinks />
        </div>

        <div class="reveal-on-scroll" data-reveal-target>
          <Comments client:only="react" />
        </div>

        <hr class="my-6 border-dashed" />

        <!-- Previous/Next Post Buttons -->
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
          {
            prevPost && (
              <a
                href={`/posts/${prevPost.slug}`}
                class="flex w-full gap-1 hover:opacity-75"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-left flex-none"
                >
                  <>
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M15 6l-6 6l6 6" />
                  </>
                </svg>
                <div>
                  <span>Previous Post</span>
                  <div class="text-sm text-skin-accent/85">{prevPost.title}</div>
                </div>
              </a>
            )
          }
          {
            nextPost && (
              <a
                href={`/posts/${nextPost.slug}`}
                class="flex w-full justify-end gap-1 text-right hover:opacity-75 sm:col-start-2"
              >
                <div>
                  <span>Next Post</span>
                  <div class="text-sm text-skin-accent/85">{nextPost.title}</div>
                </div>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-right flex-none"
                >
                  <>
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M9 6l6 6l-6 6" />
                  </>
                </svg>
              </a>
            )
          }
        </div>
      </div>
    </div>
  </main>
  <div
    id="image-viewer"
    class="image-viewer"
    hidden
    role="dialog"
    aria-modal="true"
    aria-label="Image viewer"
  >
    <div class="image-viewer__content" role="document">
      <figure class="image-viewer__figure">
        <img id="image-viewer-img" class="image-viewer__image" alt="" loading="lazy" />
      </figure>
    </div>
  </div>
  <Footer />
</Layout>

<style>
  .post-title {
    @apply text-2xl font-semibold text-skin-accent;
  }

  .image-viewer {
    position: fixed;
    inset: 0;
    z-index: 60;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    background: radial-gradient(
        circle at 20% 20%,
        rgba(var(--color-fill), 0.9),
        rgba(var(--color-fill), 0.94)
      ),
      linear-gradient(135deg, rgba(var(--color-accent), 0.12), transparent 60%);
    backdrop-filter: blur(4px);
  }

  .image-viewer.open {
    display: flex;
  }

  :global(body.image-viewer-open) {
    overflow: hidden;
  }

  .image-viewer__content {
    position: relative;
    width: min(1100px, 96vw);
    max-height: 90vh;
    display: grid;
    gap: 0.75rem;
    justify-items: center;
  }

  .image-viewer__figure {
    margin: 0;
    display: grid;
    gap: 0.75rem;
    width: 100%;
  }

  .image-viewer__image {
    width: 100%;
    max-height: 78vh;
    object-fit: contain;
    border-radius: 0.5rem;
    background: transparent;
    border: none;
    box-shadow: none;
    transform-origin: center center;
    transition: transform 120ms ease;
    user-select: none;
    touch-action: none;
  }

  #article img.zoomable-image {
    cursor: zoom-in;
    transition: transform 150ms ease, box-shadow 150ms ease;
  }

  #article img.zoomable-image:focus-visible {
    outline: 2px dashed rgb(var(--color-accent));
    outline-offset: 3px;
  }

  #article img.zoomable-image:hover {
    transform: translateY(-1px);
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.18);
  }

  @media (max-width: 640px) {
    .reveal-on-scroll {
      opacity: 0;
      transform: translateY(12px);
      transition: opacity 220ms ease, transform 220ms ease;
    }

    .reveal-on-scroll.revealed {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script is:inline data-astro-rerun>
  /** Create a progress indicator
   *  at the top */
  function createProgressBar() {
    // Create the main container div
    const progressContainer = document.createElement("div");
    progressContainer.className =
      "progress-container fixed top-0 z-10 h-1 w-full bg-skin-fill";

    // Create the progress bar div
    const progressBar = document.createElement("div");
    progressBar.className = "progress-bar h-1 w-0 bg-skin-accent";
    progressBar.id = "myBar";

    // Append the progress bar to the progress container
    progressContainer.appendChild(progressBar);

    // Append the progress container to the document body or any other desired parent element
    document.body.appendChild(progressContainer);
  }
  createProgressBar();

  // Position ToC relative to its spacer so it stays centered and aligned
  function positionToc() {
    const toc = document.querySelector(".toc-wrapper");
    const spacer = document.querySelector(".toc-spacer");
    if (!toc || !spacer) return;

    const rect = spacer.getBoundingClientRect();
    toc.style.left = `${rect.left}px`;
  }
  const schedulePositionToc = () => requestAnimationFrame(positionToc);
  schedulePositionToc();
  window.addEventListener("resize", schedulePositionToc, { passive: true });

  // Highlight current section and subsection in the ToC
  let cleanupTocHighlight;
  let cleanupRevealOnScroll;
  let cleanupImageViewer;
  function initTocHighlight() {
    const articleHeadings = Array.from(
      document.querySelectorAll("#article h2, #article h3, #article h4")
    );
    const tocLinks = new Map(
      Array.from(
        document.querySelectorAll(".toc-link[data-toc-slug]"),
        link => [link.getAttribute("data-toc-slug"), link]
      )
    );
    const tocItems = new Map(
      Array.from(
        document.querySelectorAll("[data-toc-item]"),
        item => [item.getAttribute("data-toc-item"), item]
      )
    );

    if (!articleHeadings.length || tocLinks.size === 0 || tocItems.size === 0) return;

    const parentOf = new Map();
    let lastH2 = null;
    let lastH3 = null;
    for (const heading of articleHeadings) {
      if (heading.tagName === "H2") {
        lastH2 = heading.id;
        lastH3 = null;
        parentOf.set(heading.id, null);
      } else if (heading.tagName === "H3") {
        parentOf.set(heading.id, lastH2);
        lastH3 = heading.id;
      } else if (heading.tagName === "H4") {
        parentOf.set(heading.id, lastH3 ?? lastH2);
      }
    }

    const clearActive = () =>
      tocLinks.forEach(link => link.classList.remove("active"));

    const clearOpen = () => tocItems.forEach(item => item.classList.remove("open"));

    const markActiveChain = slug => {
      const visited = new Set();
      let current = slug;
      while (current && !visited.has(current)) {
        visited.add(current);
        tocLinks.get(current)?.classList.add("active");
        current = parentOf.get(current) ?? null;
      }
    };

    const markOpenChain = slug => {
      const visited = new Set();
      let current = slug;
      while (current && !visited.has(current)) {
        visited.add(current);
        tocItems.get(current)?.classList.add("open");
        current = parentOf.get(current) ?? null;
      }
    };

    const getCurrentSlug = () => {
      const threshold = window.scrollY + window.innerHeight * 0.25;
      let current = articleHeadings[0]?.id ?? null;
      for (const heading of articleHeadings) {
        if (heading.offsetTop <= threshold) {
          current = heading.id;
        } else {
          break;
        }
      }
      return current;
    };

    let activeSlug = null;
    const updateActive = () => {
      const slug = getCurrentSlug();
      if (!slug || slug === activeSlug) return;
      activeSlug = slug;
      clearActive();
      clearOpen();
      markActiveChain(slug);
      markOpenChain(slug);
    };

    const onScroll = () => requestAnimationFrame(updateActive);
    const onResize = () => requestAnimationFrame(updateActive);

    document.addEventListener("scroll", onScroll, { passive: true });
    window.addEventListener("resize", onResize, { passive: true });
    updateActive();

    return () => {
      document.removeEventListener("scroll", onScroll);
      window.removeEventListener("resize", onResize);
    };
  }
  cleanupTocHighlight = initTocHighlight();

  // Reveal selected blocks on scroll for mobile screens
  function initRevealOnScroll() {
    const targets = Array.from(document.querySelectorAll("[data-reveal-target]"));
    if (!targets.length) return;

    const mediaQuery = window.matchMedia("(max-width: 640px)");
    let observer = null;

    const disconnect = () => observer?.disconnect();

    const showAll = () => {
      targets.forEach(el => el.classList.add("revealed"));
    };

    const setupObserver = () => {
      disconnect();
      if (!mediaQuery.matches) {
        showAll();
        return;
      }

      observer = new IntersectionObserver(
        entries => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add("revealed");
              observer?.unobserve(entry.target);
            }
          });
        },
        { threshold: 0.15 }
      );

      targets.forEach(el => {
        // Remove stale visibility when switching breakpoints
        el.classList.remove("revealed");
        observer?.observe(el);
      });
    };

    setupObserver();
    mediaQuery.addEventListener("change", setupObserver);

    return () => {
      disconnect();
      mediaQuery.removeEventListener("change", setupObserver);
    };
  }
  cleanupRevealOnScroll = initRevealOnScroll();

  // Full-screen image viewer for blog images
  function initImageViewer() {
    const viewer = document.getElementById("image-viewer");
    const viewerImg = document.getElementById("image-viewer-img");
    if (!viewer || !viewerImg) return;
    viewerImg.setAttribute("draggable", "false");

    const articleImages = Array.from(document.querySelectorAll("#article img"));
    if (!articleImages.length) return;

    const listeners = new Map();
    let activeImage = null;
    let scale = 1;
    let translateX = 0;
    let translateY = 0;
    let isDragging = false;
    let dragStartX = 0;
    let dragStartY = 0;
    let dragOriginX = 0;
    let dragOriginY = 0;

    const applyScale = () => {
      viewerImg.style.transform = `translate(${translateX}px, ${translateY}px) scale(${scale})`;
      const pannable = scale !== 1 || translateX !== 0 || translateY !== 0;
      viewerImg.style.cursor = pannable ? (isDragging ? "grabbing" : "grab") : "auto";
    };

    const open = img => {
      const src = img.getAttribute("src");
      if (!src) return;
      activeImage = img;
      viewerImg.src = src;
      viewerImg.alt = img.getAttribute("alt") ?? "";
      scale = 1;
      translateX = 0;
      translateY = 0;
      applyScale();
      viewer.classList.add("open");
      viewer.removeAttribute("hidden");
      document.body.classList.add("image-viewer-open");
      viewer.tabIndex = -1;
      viewer.focus({ preventScroll: true });
    };

    const close = () => {
      viewer.classList.remove("open");
      viewer.setAttribute("hidden", "true");
      viewerImg.src = "";
      scale = 1;
      translateX = 0;
      translateY = 0;
      applyScale();
      document.body.classList.remove("image-viewer-open");

      if (activeImage?.isConnected) {
        activeImage.focus({ preventScroll: true });
      }
      activeImage = null;
    };

    const onBackdropClick = event => {
      if (event.target === viewer) {
        close();
      }
    };

    const onEsc = event => {
      if (event.key === "Escape" && viewer.classList.contains("open")) {
        close();
      }
    };

    const onWheel = event => {
      if (!viewer.classList.contains("open")) return;
      event.preventDefault();
      const delta = event.deltaY;
      const direction = delta > 0 ? -1 : 1;
      const next = Math.min(4, Math.max(0.75, scale + direction * 0.2));
      if (next === scale) return;
      scale = next;
      applyScale();
    };

    const onDragStart = event => {
      event.preventDefault();
    };

    const onPointerDown = event => {
      if (!viewer.classList.contains("open")) return;
      if (event.button !== 0) return;
      isDragging = true;
      dragStartX = event.clientX;
      dragStartY = event.clientY;
      dragOriginX = translateX;
      dragOriginY = translateY;
      viewerImg.setPointerCapture(event.pointerId);
      applyScale();
    };

    const onPointerMove = event => {
      if (!isDragging) return;
      event.preventDefault();
      const deltaX = event.clientX - dragStartX;
      const deltaY = event.clientY - dragStartY;
      translateX = dragOriginX + deltaX;
      translateY = dragOriginY + deltaY;
      applyScale();
    };

    const endDrag = event => {
      if (!isDragging) return;
      isDragging = false;
      if (event?.pointerId != null) {
        viewerImg.releasePointerCapture(event.pointerId);
      }
      applyScale();
    };

    articleImages.forEach(img => {
      const onClick = event => {
        event?.preventDefault();
        event?.stopPropagation();
        open(img);
      };
      const onKeyDown = event => {
        if (event.key === "Enter" || event.key === " ") {
          event.preventDefault();
          event.stopPropagation();
          open(img);
        }
      };

      const hadTabIndex = img.hasAttribute("tabindex");
      if (!hadTabIndex) {
        img.tabIndex = 0;
      }

      img.classList.add("zoomable-image");
      img.addEventListener("click", onClick);
      img.addEventListener("keydown", onKeyDown);
      listeners.set(img, { onClick, onKeyDown, hadTabIndex });
    });

    viewer.addEventListener("click", onBackdropClick);
    viewer.addEventListener("wheel", onWheel, { passive: false });
    viewerImg.addEventListener("dragstart", onDragStart);
    viewerImg.addEventListener("pointerdown", onPointerDown);
    viewerImg.addEventListener("pointermove", onPointerMove);
    viewerImg.addEventListener("pointerup", endDrag);
    viewerImg.addEventListener("pointercancel", endDrag);
    viewerImg.addEventListener("pointerleave", endDrag);
    document.addEventListener("keydown", onEsc);

    return () => {
      close();
      articleImages.forEach(img => {
        const { onClick, onKeyDown, hadTabIndex } = listeners.get(img) ?? {};
        if (onClick) img.removeEventListener("click", onClick);
        if (onKeyDown) img.removeEventListener("keydown", onKeyDown);
        if (!hadTabIndex && img.tabIndex === 0) {
          img.removeAttribute("tabindex");
        }
        img.classList.remove("zoomable-image");
      });

      viewer.removeEventListener("click", onBackdropClick);
      viewer.removeEventListener("wheel", onWheel);
      viewerImg.removeEventListener("dragstart", onDragStart);
      viewerImg.removeEventListener("pointerdown", onPointerDown);
      viewerImg.removeEventListener("pointermove", onPointerMove);
      viewerImg.removeEventListener("pointerup", endDrag);
      viewerImg.removeEventListener("pointercancel", endDrag);
      viewerImg.removeEventListener("pointerleave", endDrag);
      document.removeEventListener("keydown", onEsc);
      document.body.classList.remove("image-viewer-open");
    };
  }
  cleanupImageViewer = initImageViewer();

  /** Update the progress bar
   *  when user scrolls */
  function updateScrollProgress() {
    document.addEventListener("scroll", () => {
      const winScroll =
        document.body.scrollTop || document.documentElement.scrollTop;
      const height =
        document.documentElement.scrollHeight -
        document.documentElement.clientHeight;
      const scrolled = (winScroll / height) * 100;
      if (document) {
        const myBar = document.getElementById("myBar");
        if (myBar) {
          myBar.style.width = scrolled + "%";
        }
      }
    });
  }
  updateScrollProgress();

  /** Attaches links to headings in the document,
   *  allowing sharing of sections easily */
  function addHeadingLinks() {
    const headings = Array.from(
      document.querySelectorAll("h2, h3, h4, h5, h6")
    );
    for (const heading of headings) {
      heading.classList.add("group");
      const link = document.createElement("a");
      link.className =
        "heading-link ml-2 opacity-0 group-hover:opacity-100 focus:opacity-100";
      link.href = "#" + heading.id;

      const span = document.createElement("span");
      span.ariaHidden = "true";
      span.innerText = "#";
      link.appendChild(span);
      heading.appendChild(link);
    }
  }
  addHeadingLinks();

  /** Attaches copy buttons to code blocks in the document,
   * allowing users to copy code easily. */
  function attachCopyButtons() {
    const copyButtonLabel = "Copy";
    const codeBlocks = Array.from(document.querySelectorAll("pre"));

    for (const codeBlock of codeBlocks) {
      const wrapper = document.createElement("div");
      wrapper.style.position = "relative";

      const copyButton = document.createElement("button");
      copyButton.className =
        "copy-code absolute right-3 -top-3 rounded bg-skin-card px-2 py-1 text-xs leading-4 text-skin-base font-medium";
      copyButton.innerHTML = copyButtonLabel;
      codeBlock.setAttribute("tabindex", "0");
      codeBlock.appendChild(copyButton);

      // wrap codebock with relative parent element
      codeBlock?.parentNode?.insertBefore(wrapper, codeBlock);
      wrapper.appendChild(codeBlock);

      copyButton.addEventListener("click", async () => {
        await copyCode(codeBlock, copyButton);
      });
    }

    async function copyCode(block, button) {
      const code = block.querySelector("code");
      const text = code?.innerText;

      await navigator.clipboard.writeText(text ?? "");

      // visual feedback that task is completed
      button.innerText = "Copied";

      setTimeout(() => {
        button.innerText = copyButtonLabel;
      }, 700);
    }
  }
  attachCopyButtons();

  /** Scrolls the document to the top when
   * the "Back to Top" button is clicked. */
  function backToTop() {
    document.querySelector("#back-to-top")?.addEventListener("click", () => {
      document.body.scrollTop = 0; // For Safari
      document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
    });
  }
  backToTop();

  /* Go to page start after page swap */
  document.addEventListener("astro:after-swap", () => {
    cleanupTocHighlight?.();
    cleanupRevealOnScroll?.();
    cleanupImageViewer?.();
    cleanupTocHighlight = initTocHighlight();
    cleanupRevealOnScroll = initRevealOnScroll();
    cleanupImageViewer = initImageViewer();
    schedulePositionToc();
    window.scrollTo({ left: 0, top: 0, behavior: "instant" });
  });
</script>
